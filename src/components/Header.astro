---
import LogoWeb from "../assets/Logo_web.png"
import LogoMovil  from "../assets/logo_movil.svg"
const currentPath = Astro.url.pathname;



const Menu =[{title: "Inicio", path: "/"}, {title: "Nosotros", path: "/nosotros"}, {title: "Servicios", path: "/servicios"},
             {title: "Tracking", path: "/tracking"}, {title: "Cotizar", path: "/cotizar"}]

---
<header class="w-full">
    <nav class="container mx-auto px-5 flex flex-row justify-between  items-center">

        <!--Logo web -->
        <div class="hidden lg:flex w-[214px] h-[120px] rounded-b-4xl bg-white  items-center justify-center">
            <a href="/">
                <img src={LogoWeb.src} alt="logo_aurum_customs" class="w-40" />
            </a>
        </div>
        <!--Logo MOVIL -->
        <div class="flex py-2 lg:hidden ">
            <a href="/">
                <img src={LogoMovil.src} alt="logo_aurum_customs" class="size-14" />
            </a>
        </div>
        
        <div class="hidden lg:flex flex-row space-x-7 justify-between  items-center">
            <ul class="flex flex-row gap-7 ">
                {Menu.map((menu)=>
                    (
                        <a href={menu.path} class="font-Montserrat font-medium text-white text-[1rem] "
                    class:list={currentPath === menu.path ? "text-amber-800" : " text-black"}
                    >{menu.title}</a>
                    )
                )}
            
            </ul>

            <a href="/contacto" class="py-2 px-5 bg-linear-to-r from-[#71D9FF] to-[#026FFF] rounded-2xl">Contacto</a>
        </div>
       
    </nav>

</header>